apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: some-application
packageMetadata:
  shortDescription: A sample Kubernetes application
openAPI:
  definitions:
    io.k8s.cli.setters.account-id:
      x-k8s-cli:
        setter:
          name: account-id
          value: "12345678"
          setBy: cluster-override
          isSet: true
    io.k8s.cli.setters.region:
      x-k8s-cli:
        setter:
          name: region
          value: ap-southeast-2
          setBy: cluster-override
          isSet: true
    io.k8s.cli.setters.namespace:
      x-k8s-cli:
        setter:
          name: namespace
          value: my-namespace
          setBy: package-override
          isSet: true
    io.k8s.cli.setters.config-template:
      x-k8s-cli:
        setter:
          name: config-template
          value: |
            {
              "region": "{{value "region"}}",
              "cluster": "{{value "cluster"}}",
              "arg-one": "{{args 0}}"
            }
          setBy: cluster-override
          isSet: true
    io.k8s.cli.setters.replicas:
      x-k8s-cli:
        setter:
          name: replicas
          value: "5"
          setBy: package-override
          isSet: true
    io.k8s.cli.setters.cluster:
      x-k8s-cli:
        setter:
          name: cluster
          value: my-cluster
          setBy: cluster-override
          isSet: true
